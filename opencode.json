{
  "$schema": "https://opencode.ai/config.json",
  "instructions": ["AGENTS.md"],
  "lsp": {
    "bashls": {
      "extensions": [".sh", ".bash", ".zsh"]
    },
    "lua-ls": {
      "extensions": [".lua"]
    },
    "gopls": {
      "extensions": [".go"]
    },
    "rust-analyzer": {
      "extensions": [".rs"]
    },
    "pyright": {
      "extensions": [".py"]
    }
  },
  "formatter": {
    "shfmt": {
      "command": ["shfmt", "-i", "2", "-w", "$FILE"],
      "extensions": [".sh", ".bash"]
    },
    "stylua": {
      "command": ["stylua", "$FILE"],
      "extensions": [".lua"]
    },
    "prettier": {
      "command": ["prettier", "--write", "$FILE"],
      "extensions": [".json", ".yaml", ".yml", ".md"]
    },
    "gofmt": {
      "command": ["gofmt", "-w", "$FILE"],
      "extensions": [".go"]
    },
    "black": {
      "command": ["black", "$FILE"],
      "extensions": [".py"]
    },
    "rustfmt": {
      "command": ["rustfmt", "$FILE"],
      "extensions": [".rs"]
    }
  }
}
